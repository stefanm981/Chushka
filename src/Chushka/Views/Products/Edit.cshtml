@model Chushka.Web.ViewModels.Products.ProductInputModel

<main class="mt-3 mb-5">
    <h1 class="text-center">Edit Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name..." value="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Price..." value="@Model.Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..." value="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            @{
                string[] types = {"Food", "Domestic", "Health", "Cosmetic", "Other",};
            }
            @for (int i = 0; i < 5; i++)
            {
                <div class="form-check form-check-inline">
                    @if (Model.ProductType == i)
                    {
                        <input asp-for="ProductType" class="form-check-input" id="option@@@i" type="radio" value="@i" checked>
                    }
                    else
                    {
                        <input asp-for="ProductType" class="form-check-input" id="option@@@i" type="radio" value="@i">
                    }
                    <label class="form-check-label" for="option@@@i">@types[i]</label>
                </div>
            }
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color">Edit</button>
            <a asp-controller="Home" asp-action="Index" class="btn chushka-bg-color">Cancel</a>
        </div>
    </form>
</main>