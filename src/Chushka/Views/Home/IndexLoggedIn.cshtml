@model Chushka.Web.ViewModels.Home.LoggedInViewModel

<main class="mt-3 mb-5">
    <div class="container-fluid text-center">
        @if (User.IsInRole("Administrator"))
        {
            <h2>Greetings, admin!</h2>
            <h4>Enjoy your work today!</h4>
        }
        else
        {
            <h2>Greetings, @User.Identity.Name!</h2>
            <h4>Feel free to view and order any of our products.</h4>
        }
    </div>
    <hr class="hr-2 bg-dark" />
        @if (Model.Products.Count > 0)
        {
            <div class="container-fluid product-holder">
            @{
                int rows = (Model.Products.Count / 5);
            }
            @if (Model.Products.Count % 5 != 0)
            {
                rows++;
            }

            @for (int row = 0; row < rows; row++)
            {
                <div class="row d-flex justify-content-around mb-4">
                    @for (int col = 0; col < 5; col++)
                    {
                        int currentIndex = col + (row * 5);
                        if (Model.Products.Count == currentIndex)
                        {
                            break;
                        }
                        @await Html.PartialAsync("_ProductSquarePartial", Model.Products.ToList()[currentIndex])
                    }
                </div>
            }
            </div>
        }
</main>