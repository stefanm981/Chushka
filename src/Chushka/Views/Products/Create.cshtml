@model Chushka.Web.ViewModels.Products.ProductInputModel

<main class="mt-3 mb-5">
    <h1 class="text-center">Create Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Create">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name...">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Price...">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="form-check form-check-inline">
                <input asp-for="ProductType" class="form-check-input" id="option0" type="radio" value="0">
                <label class="form-check-label" for="option0">Food</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="ProductType" class="form-check-input" id="option1" type="radio" value="1">
                <label class="form-check-label" for="option1">Domestic</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="ProductType" class="form-check-input" id="option2" type="radio" value="2">
                <label class="form-check-label" for="option2">Health</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="ProductType" class="form-check-input" id="option3" type="radio" value="3">
                <label class="form-check-label" for="option3">Cosmetic</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="ProductType" class="form-check-input" id="option4" type="radio" value="4" checked>
                <label class="form-check-label" for="option4">Other</label>
            </div>
            <span asp-validation-for="ProductType" class="text-danger"></span>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Create</button>
        </div>
    </form>
</main>