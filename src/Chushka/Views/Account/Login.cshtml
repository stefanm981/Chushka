@model Chushka.Web.ViewModels.LogInInputModel
<main class="mt-3">
    <h1 class="text-center">Login</h1>
    <hr class="bg-secondary half-width"/>
    <form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Username...">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Login</button>
        </div>
    </form>
</main>